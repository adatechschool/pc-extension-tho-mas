{
    "manifest_version":2,
    
    "name":"tho-mas",
    "description":"ouga",
    "version":"1.0",
    "permissions":["storage","activeTab","declarativeContent"],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["js/jquery-3.6.0.min.js","js/content.js"]
        }
    ],

    "page_action":{
        "default_popup": "index.html",
        "default_icon":"images/icon.png"
    }

}