{
    "manifest_version":2,
    
    "name":"VibeDashboard",
    "description":"Une extension pour rendre Vibe plus utile",
    "version":"1.0",
    "permissions":["storage","activeTab","declarativeContent"],

    "content_scripts":[
        {
            "matches":["*://vibe.adatechschool.fr/*"],
            "js":["js/jquery-3.6.0.min.js","js/content.js"]
        }
    ],

    "page_action":{
        "default_icon":"images/icon.png"
    },
    "icons":
    {
        "32":"images/icon.png",
        "64":"images/icon.png",
        "96":"images/icon.png"
    }

}